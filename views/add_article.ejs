<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/public/css/style.css" rel="stylesheet">
    <title>Document</title>
</head>

<body class="bg">
    <%- include ('partials/nav.ejs') -%>
        <br>
        <div>
            <% if(typeof err !='undefined' ) { %>
                <% err.forEach(function(error) { %>
                    <div class="alert alert-danger alert-dismissible">
                        <%= error.msg %>
                    </div>
                    <% }) %>
                        <% } %>
                            <div class="card"
                                style="margin-left: 100px;margin-right: 100px;border-radius: 20px;border:none;">
                                <h2 style="text-align: center;">Add Article</h1>
                                    <div class="card-body" style="border-radius: 20px;border:none;">
                                        <form name="form1" method="POST" action="/article/add">
                                            <div>
                                                <div><b>Title: </b></div>
                                                <div><textarea class="form-control" name="title" rows="2"></textarea>
                                                </div>
                                                <br>
                                                <div><b>Body: </b></div>
                                                <div><textarea class="form-control" name="body" rows="8"></textarea>
                                                </div>
                                                <br>
                                                <div colspan="2" class="text-end"><input class="btn btn-outline-primary"
                                                        type="submit" value="Submit"></div>
                                                <div>
                                        </form>
                                    </div>

                                    <script
                                        src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                                    <script src="/public/js/main.js"></script>
</body>

</html>