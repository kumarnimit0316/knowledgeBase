<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/public/css/style.css" rel="stylesheet">
    <title>Document</title>
</head>

<body class="bg">
    <div>
        <%- include ('partials/nav.ejs') -%>
            <%- messages('message', locals) %>
                <br>
    </div>
    <div>
        <ul>
            <% articles.forEach(function(articles){ %>

                <div
                    style="width: 60rem;margin-left: auto;margin-right: auto;border-radius: 20px;opacity: 0.9;border:none;">
                    <div class="card" style="border-radius: 20px;border:none;">
                        <div class="card-body" style="border-radius: 20px;border:none;">
                            <div>
                                <div style="text-align: center;">
                                    <h2><I>
                                            <%= articles.title %>
                                        </I></h2>
                                </div>
                                <div class="text-end">
                                    <h5>- <%= articles.au %>
                                    </h5>
                                </div>
                                <div><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-clock" viewBox="0 0 16 16">
                                        <path
                                            d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                                        <path
                                            d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                                    </svg><I>
                                        <%= articles.date %>
                                    </I></div>
                                <br>
                                <div colspan="2" class="text-end"><a href="/article/<%= articles._id %>">
                                        <input class="btn btn-outline-primary" type="submit" value="Read more"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <br>
                </div>
                <% }); %>
        </ul>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/public/js/main.js"></script>
</body>

</html>